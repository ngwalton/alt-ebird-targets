<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>alt eBird targets</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />
    <link rel="stylesheet" href="styles.css" />
    <script
      src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
      integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
      crossorigin=""
    ></script>
    <script src="index.js" defer></script>
  </head>
  <body>
    <div id="body-wrapper">
      <nav class="navbar">
        <div class="title">alt eBird targets</div>
        <a href="#" class="toggle-button">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </a>
        <div class="navbar-links">
          <ul role="list">
            <li><a href="#">Targets</a></li>
            <li><a href="#">About</a></li>
          </ul>
        </div>
      </nav>

      <div id="content-wrapper">
        <div id="target-wrapper">
          <div class="container" id="target-nav-container">
            <div id="type">
              <form action="" id="type-radio-form">
                <ul id="type-list" role="list">
                  <li>
                    <input
                      class="type-radio"
                      value="hotspot"
                      type="radio"
                      name="type-radio"
                      id="type-hotspot"
                      checked
                    />
                    <label class="type-label" for="type-hotspot">Hotspot</label>
                  </li>
                  <!-- <li>
                    <input
                      class="type-radio"
                      value="county"
                      type="radio"
                      name="type-radio"
                      id="type-county"
                    />
                    <label class="type-label" for="type-county">County</label>
                  </li> -->
                  <li>
                    <input
                      class="type-radio"
                      value="species"
                      type="radio"
                      name="type-radio"
                      id="type-species"
                    />
                    <label class="type-label" for="type-species">Species</label>
                  </li>
                </ul>
              </form>
            </div>

            <div id="outer-search-container">
              <div class="search-container show" data-name="county">
                <label for="county">Wisconsin County</label>
                <input
                  class="search-input"
                  type="search"
                  name="county"
                  id="county-input"
                  placeholder="Enter a county"
                />
                <ul class="search-list" id="county-search-list"></ul>
              </div>
              <div class="search-container" data-name="hotspot">
                <label for="hotspot">Hotspot</label>
                <input
                  class="search-input"
                  type="search"
                  name="hotspot"
                  id="hotspot-input"
                  placeholder="Enter a hotspot"
                />
                <ul class="search-list" id="hotspot-search-list"></ul>
              </div>
              <div class="search-container" data-name="species">
                <label for="species">Species</label>
                <input
                  class="search-input"
                  type="search"
                  name="species"
                  id="species-input"
                  placeholder="Enter a species"
                />
                <ul class="search-list" id="species-search-list"></ul>
              </div>
            </div>
          </div>

          <div id="targets_bar">
            <div id="targets"></div>
          </div>
        </div>

        <div id="map"></div>
      </div>
    </div>
  </body>
</html>
